{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "outDir": "lib",
        "declaration": true,
        "declarationDir": "./types",
        "declarationMap": true,
        "noUnusedLocals": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "noUnusedParameters": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
            "vue"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "build",
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}